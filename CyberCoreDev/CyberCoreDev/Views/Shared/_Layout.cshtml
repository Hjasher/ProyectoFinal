<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>CyberCoreDev</title>


    @Styles.Render("~/Content/DevExtremeBundle")
    <link href="~/Content/dx.fluent.custom-scheme.css" rel="stylesheet">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @Styles.Render("~/Content/bundle")
    @Scripts.Render("~/Scripts/bundle")
    @Scripts.Render("~/Scripts/DevExtremeBundle")

    <script>
        DevExpress.config({
            theme: "fluent.custom-scheme" 
        });
    </script>

    @RenderSection("styles", required: false)
</head>

<body style="padding-top: 3.5rem;">
    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CyberCoreDev</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a href="#" class="nav-link active">Home</a></li>
                    <li class="nav-item"><a href="#about" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="@Url.Action("Almacenamiento", "Home")" class="nav-link">Almacenamiento</a></li>
                    <li class="nav-item"><a href="@Url.Action("Usuario", "Home")" class="nav-link">Usuario</a></li>
                    <li class="nav-item"><a href="#contact" class="nav-link">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container" style="margin-top: 1.5rem;">
        @RenderBody()
    </main>

    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            console.log("Tema actual:", DevExpress.ui.themes.current());
        });
    </script>
</body>
</html>